@model Smart_E.Data.Subject

<form method="post" asp-action="CreateSubject">
    <div class="border p-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h3 class="text-black-50 pl-3">Add Subject</h3>
        </div>
        <div class="row">
            <div class="col-20">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="SubjectName">Subject Name</label>
                        <div class="col-12">
                        <input asp-for="SubjectName" class="form-control"/>
                        <span asp-validation-for="SubjectName" class="text-danger"></span>
                    </div>       
                  
                </div>
               
                <div class="form-group row">
                    <div class="col-12 offset-2 row position-static">
                        <div class="col">
                            <input type="submit" class="btn btn-outline-info w-75" value="Create"/>                     
                            <a asp-action="HODDashboard" class="btn btn-outline-danger w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>
