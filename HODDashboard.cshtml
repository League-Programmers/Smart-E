@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Identity
@{
    ViewBag.Title = "Teachers";
    Layout = "_Layout";
    var isHOD = await _userManager.GetUserAsync(User);

}
@inject UserManager<ApplicationUser> _userManager

@inject IViewLocalizer _localizer
<head>
    <br/>
    <h2>Head Of Department</h2>

     <div class="row">
        <div class="col-12">
            <button type="button" onclick="javascript:showAssignTeacherModal();" style="margin-left: 5px;" class="btn btn-sm btn-success float-lg-right" ><i class="fas fa-plus"><span> Assign Teacher/Subject</span></i></button>
            <button type="button" class="btn btn-sm btn-warning float-lg-right"><a asp-controller="HOD" asp-action="CreateSubject">Create Subject</a></button>
        </div>
    </div>
    <link href="~/assets/libs/magnific-popup/dist/magnific-popup.css" rel="stylesheet">
    <link href="~/assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.css" rel="stylesheet">
    <link href="~/assets/libs/footable/css/footable.core.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/assets/libs/select2/dist/css/select2.min.css">
    <link href="~/assets/libs/sweetalert2/dist/sweetalert2.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.4.0/min/dropzone.min.css"/>
    <link rel="stylesheet" type="text/css" href="~/assets/libs/bootstrap-switch/dist/css/bootstrap3/bootstrap-switch.min.css">
</head>
<body>
    <br/>
    <div class="d-grid gap-2">
        <table align="center" width="10" height="10">
        <tr><td colspan="5"><button class="btn btn-outline-info" type="button"><i class="fas fa-info "><a asp-controller="HOD" asp-action="TeacherDetails"> Teachers details</a></i></button></td>
        <td colspan="5"><button class="btn btn-outline-warning" type="button"><i class="fas fa-bell"> <a href="https://outlook.office365.com/mail/">Notifications</a></i></button></tr></td>
        </table>
       
    </div>
   


<br/>
<div class="container-fluid">
 
  <div class="row">
       
  <div class="col">
     <span class="border">
     <h3>Newly assigned Teachers</h3>
     @*teachers with subject with date assigned*@


    </span>
  </div>
 
  <div class="col">
      <span class="border">
     <h3>Attendance Report</h3>
   <div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="tblTeachers" class="table v-middle">
                        <thead>
                        <tr>
                            <th style="width: 160px;">@_localizer["Teacher Name"]</th>
                            <th style="width: 160px;">@_localizer["Email"]</th>                           
                            <th style="width: 50px"></th>
                        </tr>
                        </thead>
                        <tbody>
                            <td><td><td colspan="5"><button class="btn btn-outline-info" type="button"><a asp-controller="HOD" asp-action="ViewAttendance"> View</a></button></td></td></td>
                        </tbody>
                       
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

      </span>
     </div>
  </div>

</div>



    <div id="assignTeacher" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Assign Teacher to Subject</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="cbTeacher" class="control-label">Teacher</label>
                            <div class="dropdown">
  <button class="btn btn-outline-success dropdown-toggle" type="button" id="cbTeacher" data-bs-toggle="dropdown" aria-expanded="true">
    Teacher?
  </button>
  <ul class="dropdown-menu" aria-labelledby="cbTeacher">
    <li><a class="dropdown-item" href="#">Action</a></li>
    <li><a class="dropdown-item" href="#">Another action</a></li>
    <li><a class="dropdown-item" href="#">Something else here</a></li>
  </ul>
</div>
                        </div>
                        <div class="form-group">
                            <label for="cbSubject" class="control-label">Subject</label>
                           <div class="dropdown">
  <button class="btn btn-outline-success dropdown-toggle" type="button" id="cbSubject" data-bs-toggle="dropdown" aria-expanded="false">
   Subject?
  </button>
  <ul class="dropdown-menu" aria-labelledby="cbSubject">
    <li><a class="dropdown-item" href="#">Action</a></li>
    <li><a class="dropdown-item" href="#">Another action</a></li>
    <li><a class="dropdown-item" href="#">Something else here</a></li>
  </ul>
</div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-danger waves-effect waves-light" data-dismiss="modal">Cancel</button>
                    <button type="button" id="BtnAssignServiceNote" onclick="assignTeacher()" class="btn btn-outline-info waves-effect">Assign</button>
                </div>
            </div>
        </div>
    </div>

</body>

<div>
    <script src="~/assets/libs/moment/moment.js"></script>
    <script src="~/assets/libs/bootstrap-material-datetimepicker/js/bootstrap-material-datetimepicker-custom.js"></script>
    <script src="~/assets/extra-libs/DataTables/datatables.min.js"></script>
    <script src="~/dist/js/pages/datatable/datatable-basic.init.js"></script>
    <script src="~/assets/libs/select2/dist/js/select2.full.min.js"></script>
    <script src="~/assets/libs/select2/dist/js/select2.min.js"></script>
    <script src="~/dist/js/pages/forms/select2/select2.init.js"></script>
    <script src="~/assets/libs/sweetalert2/dist/sweetalert2.all.min.js"></script>
    <script src="~/assets/libs/sweetalert2/sweet-alert.init.js"></script>
    <script src="~/assets/libs/moment/moment.js"></script>
    <script src="~/assets/libs/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
    <script src="https://smtpjs.com/v3/smtp.js"></script>


</div>
<script>
    function showAssignTeacherModal() {
        $('#assignTeacher').modal('show');
    }
    $(document).ready(function() {
        loadTeachers();
    });
    var tblTeachers = $('#tblTeachers').DataTable({
        createdRow: function(row, data, dataIndex) {
            $(row).attr('id', data.id);
        },
        "columns": [
            { "data": "teacherName" },
            { "data": "email" },
            { "data": "buttons" }
        ]
    });
    function loadTeachers() {
        $.ajax({
            url: '@Url.Action("GetTeachers", "Teachers")',
            type: 'GET',
            success: function(result) {

                var rows = [];

                for (var i = 0; i < result.length; i++) {

                    rows.push({
                        id: result[i].id,
                        teacherName: result[i].teacherName,
                        email:result[i].email,
                        buttons:  `<div><button type="button" class="btn btn-sm btn-outline-info waves-effect waves-light align-content-end float-lg-right"
                            style="margin-right: 3px" data-toggle="tooltip" onclick="javascript:sendMail('${result[i].id}')
                            data-original-title="View"><span><i class="fas fa-envelope" aria-hidden="true"></i> Email</span></button></div>`

                    });

                }

                tblTeachers.rows.add(rows).draw();

            },
            error: function(jqXHR, exception) {
                swal({
                    title: "ERROR STATUS " + jqXHR.status,
                    text: "Error Message: " + jqXHR.responseText,
                    type: "error",
                    showCancelButton: false,
                    confirmButtonText: "OK"
                });
            }
        });
    }
    function sendMail(id) {
        $.ajax({
            url: '@Url.Action("EmailTeacher", "Teachers")',
            type: 'POST',
            success: function(result) {

            window.location.href = `mailto: ${email}`;
            },
            error: function(jqXHR, exception) {
                swal({
                    title: "ERROR STATUS " + jqXHR.status,
                    text: "Error Message: " + jqXHR.responseText,
                    type: "error",
                    showCancelButton: false,
                    confirmButtonText: "OK"
                });
            }
            });
       

    }

    function assignTeacher() {
        var model = {
            teacherName: $('#txtTeacherName').val(),
            email: $('#txtEmail').val()
        }
        $.ajax({
            url: '@Url.Action("CreateTeacher", "Teachers")',
            type: 'POST',
            dataType: 'json',
            data: JSON.stringify(model),
            contentType: "application/json; charset=utf-8",
            success: function(result) {

                $('#addTeacher').modal('hide');
            
                var rows = [];

                rows.push({
                    id: result.id,
                    teacherName: result[i].teacherName,
                    email: result[i].email,
                    buttons: `<div><button type="button" class="btn btn-sm btn-outline-info waves-effect waves-light align-content-end float-lg-right"
                            style="margin-right: 3px" data-toggle="tooltip" onclick="javascript:sendMail('${result[i].email}')
                            data-original-title="View"><span><i class="fas fa-envelope" aria-hidden="true"></i> Email</span></button></div>`
                });

                tblTeachers.rows.add(rows).draw();

                loadTeachers();

            },
            error: function(jqXHR, exception) { 
                swal({
                    title: "ERROR STATUS " + jqXHR.status,
                    text: "Error Message: " + jqXHR.responseText,
                    type: "error",
                    showCancelButton: false,
                    confirmButtonText: "OK"
                });
            }
        });
    }
</script>