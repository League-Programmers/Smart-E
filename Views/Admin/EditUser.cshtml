@model ApplicationUser

<!--Edit Modal -->
<div class="modal fade" id="editUserRole" tabindex="-1" aria-labelledby="EditRecord" aria-hidden="true">
    <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
        <h5 class="modal-title" id="EditRecord">Edit User Record</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">x</button>
        </div>
        <div class="modal-body">
            <form>
            <div class="form-group">
                <input type="hidden" class="form-control" id="txtUserId" style="width: 100%"/>
            </div>
            <div class="form-group">
                <label for="txtName" class="control-label"> Name</label>
                <input disabled type="text" class="form-control" id="txtName" style="width: 100%"/>
            </div>
            <div class="form-group">
                <label for="cbRole" class="control-label">Role</label>
                <select class="select2 form-control" id="cbRole" style="width: 100%; height: 36px;">
                    <option value="">--Select Role--</option>
                    <option value=1>Parent</option>
                    <option value=2>Student</option>
                    <option value=3>Teacher</option>
                    <option value=4>Head of Department</option>
                </select>
            </div>
            </form>
        </div>
        <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" id="BtnCreateServiceNote" onclick="editUserRoles()" class="btn btn-outline-warning waves-effect waves-light">Delete</button>
        </div>
    </div>
    </div>
</div>