@model IEnumerable<Smart_E.Models.ApplicationUser>
@{
    ViewBag.Title = "Manage Users";
    Layout = "_Layout";

}
@inject IViewLocalizer _localizer

<!DOCTYPE html>
<html dir="ltr" lang="en">

<head>
