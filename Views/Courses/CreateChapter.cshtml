@model Smart_E.Data.ChapterViewModel
@{
    ViewData["Title"] = "Create Topic";
     Layout = "_Layout";
}
<!DOCTYPE html>
<html>
<body>
    <div class="container">
        <div class="row">
    <div class="col-md-4">

        <h2>Add Topic</h2>
        
       <div asp-validation-summary="ModelOnly" class="text-danger"></div>

     <form asp-action="CreateChapter" method="post">

       <div class="form-group">
          <label  asp-for="ChapterName">Chapter name</label>
          <input  asp-for="ChapterName" class="form-control" />
       </div>
      
 <div class="form-group">
    <label asp-for="CourseId">Choose Course</label>
    <label asp-for="CourseId">Choose Course</label>
    <select asp-for="CourseId" class="form-control">
        <option value="0">select a Course</option>
        @foreach (var s in ViewBag.Course)
        {
            <option value="@s.CourseId">@s.CourseName</option>
        }
    </select>
</div>
       <div class="form-group">
           <label asp-for="Date">Date</label>
           <input asp-for="Date" class="form-control" />
       </div>
       <div class="form-group">
           <label asp-for="Description">Description</label>
           <input asp-for="Description"  class="form-control" />
       </div>
      
      <button type="submit" class="btn btn-dark">@ViewBag.Action</button>
       <a asp-controller="Courses" asp-action="Course"
          class="btn btn-dark">Cancel</a>
     </form>
     </div>
    
     </div>
    </div>
</body>
</html>


