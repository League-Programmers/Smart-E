        @*Navbar Ends*@
        <main>
            <div class="container-fluid">
                 <div class="page-breadcrumb">
                    <div class="row">
                        <div class="col-5 align-self-center">
                            <h3 class="page-title">@_localizer["UPDATE USER ROLE"]</h3>
                                <div class="d-flex align-items-center">
                                </div>
                        </div>
                    </div>
                 </div>
                <div class="row">
                    <div class="col-md-3">
                     <div class="card bg-outline-primary" style="max-width: 18rem;">
                        <div class="card-header">Head of Department</div>
                          <div class="card-body">  
                            <h5 class="card-title">Swith to Head of Department</h5>
                            <a class="card-text" asp-controller="Admin" asp-action="GetHOD">
                                <i class="fas fa-user-circle fa-7x" aria-hidden="true"></i>
                            </a>
                          </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                     <div class="card bg-outline-secondary" style="max-width: 18rem;">
                        <div class="card-header">Teacher</div>
                          <div class="card-body">
                            <h5 class="card-title">Switch to Teacher</h5>
                            <a class="card-text" asp-controller="Admin" asp-action="GetTeacher">
                                <i class="fas fa-user-circle fa-7x" aria-hidden="true"></i>
                            </a>
                          </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                     <div class="card bg-outline-success" style="max-width: 18rem;">
                        <div class="card-header">Student</div>
                          <div class="card-body">
                            <h5 class="card-title">Switch to Student</h5>
                            <a class="card-text" asp-controller="Admin" asp-action="GetStudent">
                                <i class="fas fa-user-circle fa-7x" aria-hidden="true"></i>
                            </a>
                          </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                     <div class="card bg-outline-warning" style="max-width: 18rem;">
                        <div class="card-header">Parent</div>
                          <div class="card-body">
                            <h5 class="card-title">Switch to Parent</h5>
                            <a class="card-text" asp-controller="Admin" asp-action="GetParent"> 
                                <i class="fas fa-user-circle fa-7x" aria-hidden="true"></i>
                            </a>
                          </div>
                        </div>
                    </div>
                </div>
                </div>
                </main>
            <div class="preloader">
                <div class="lds-ripple">
                    <div class="lds-pos"></div>
                     <div class="lds-pos"></div>
                </div>
            </div>

   
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="tblUsers" class="table v-middle">
                            <thead>
                            <tr>
                                <th style="width: 160px;">@_localizer["Name"]</th>
                                <th style="width: 160px;">@_localizer["Email"]</th>
                                <th style="width: 160px;">@_localizer["Role"]</th>
                                <th style="width: 160px;">@_localizer["Status"]</th>
                                <th style="width: 50px"></th>
                            </tr>
                            </thead>
                            <tbody>

                            </tbody>
                            <tfoot>
                            <tr>
                                <th>@_localizer["Name"]</th>
                                <th>@_localizer["Email"]</th>
                                <th>@_localizer["Role"]</th>
                                <th>@_localizer["Status"]</th>
                                <th></th>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- Button trigger modal -->
                    <button type="button" onclick="javascript:showUpdateUserModal();" style="margin-left: 5px;" class="btn btn-sm btn-outline-warning float-lg-left"><i class="fas fa-users"><span>
                        Update User
                    </span></i></button>


                    
                    <!--Edit Modal -->
                    <div class="modal fade" id="updateUser" tabindex="-1" aria-labelledby="EditRecord" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="EditRecord">Edit User Record</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">x</button>
                          </div>
                          <div class="modal-body">
                             <form>
                                <div class="form-group">
                                    <label for="txtUserId" class="control-label">Update user role.</label>
                                    @*<input asp-for="Id" hidden/>*@
                                </div>
                                <div class="form-group">
                                    <label for="txtName" class="control-label"> Name</label>
                                    <input disabled type="text" class="form-control" id="txtName" value="John Doe" style="width: 100%"/>
                                </div>
                                <div class="form-group">
                                    <label for="cbRole" class="control-label">Role</label>
                                    <select class="select2 form-control" id="cbRole" style="width: 100%; height: 36px;">
                                        <option value="">--Select Role--</option>
                                        <option value=1>Parent</option>
                                        <option value=2>Student</option>
                                        <option value=3>Teacher</option>
                                        <option value=4>Head of Department</option>
                                    </select>
                                </div>
                             </form>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" id="BtnCreateServiceNote" asp-action="EditUser()" class="btn btn-outline-warning waves-effect waves-light">Update</button>
                          </div>
                        </div>
                      </div>
                    </div>

                    
             
                </div>
            </div>
        </div>
    </div>
      <div>
        <script src="~/assets/libs/moment/moment.js"></script>
        <script src="~/assets/libs/bootstrap-material-datetimepicker/js/bootstrap-material-datetimepicker-custom.js"></script>
        <script src="~/assets/extra-libs/DataTables/datatables.min.js"></script>
        <script src="~/dist/js/pages/datatable/datatable-basic.init.js"></script>
        <script src="~/assets/libs/select2/dist/js/select2.full.min.js"></script>
        <script src="~/assets/libs/select2/dist/js/select2.min.js"></script>
        <script src="~/dist/js/pages/forms/select2/select2.init.js"></script>
        <script src="~/assets/libs/sweetalert2/dist/sweetalert2.all.min.js"></script>
        <script src="~/assets/libs/sweetalert2/sweet-alert.init.js"></script>
        <script src="~/assets/libs/moment/moment.js"></script>
        <script src="~/assets/libs/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
        <script src="https://smtpjs.com/v3/smtp.js"></script>
    </div>
</body>
</html>
<script>
    function showUpdateUserModal() {
        $('#updateUser').modal('show');
    }
</script>

